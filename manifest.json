{
  "manifest_version": 3,
  "name": "Green Analyze Exporter",
  "version": "1.0.0",
  "description": "Greenの分析ページの表をCSV/XLSXでダウンロードします。",
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "https://www.green-japan.com/*"
  ],
  "action": {
    "default_title": "Download CSV/XLSX",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "sw.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.green-japan.com/client/analyze*"
      ],
      "js": [
        "vendor/xlsx.full.min.js",
        "content.js"
      ]
    }
  ]
}
